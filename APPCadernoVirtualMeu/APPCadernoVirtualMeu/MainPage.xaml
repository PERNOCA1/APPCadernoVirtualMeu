<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APPCadernoVirtualMeu.MainPage"
             Title="Caderno Virtual">
    <!-- ScrollView serve pra vc conseguir rolar a tela caso tenha
    muitas informações/botões.-->
    <ScrollView>
    
    <!-- StackLayout é a estrutura da tela do app -->
    <StackLayout>
               
        <!-- button é um botão onde tera uma escrita(Text)
        e uma ação de clicar/selecionar (Clicked)-->
        <Button Text="1° ANO" Clicked="Button_Clicked"/>
        <Button Text="2° ANO" Clicked="Button_Clicked_1"/>
        <Button Text="3° ANO" Clicked="Button_Clicked_2"/>
    </StackLayout>
    </ScrollView>

</ContentPage>
